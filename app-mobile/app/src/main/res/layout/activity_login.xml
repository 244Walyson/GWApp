<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity">

    <View
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6000000"
        android:alpha="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-78dp"
        tools:layout_editor_absoluteY="-76dp">

        <TextView
            android:id="@+id/txtErr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Login"
            android:fontFamily="@font/gordita_regular"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleX="1.3"
            android:scaleY="1.6"
            android:src="@drawable/w_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="50dp">


            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/input_message_shape"
                android:maxLines="1"
                android:hint="Email"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/gordita_regular"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_primary" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_message_shape"
                android:hint="Password"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/gordita_regular"
                android:textColorHint="@color/gray_primary" />

            <TextView
                android:id="@+id/txtForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:text="Esqueceu a senha?"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/loginLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_tertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Entrar com"
                    android:textColor="@color/gray_tertiary" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#797979" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/GoogleLogin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_google"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/white" />
                <ImageView
                    android:id="@+id/GithubLogin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/icon_github"
                    app:tint="@color/white" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:padding="15dp"
                android:textColor="@color/white"
                android:text="nÃ£o tem uma conta? cadastre-se"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>