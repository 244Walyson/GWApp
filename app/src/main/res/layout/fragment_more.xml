<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_arrow_left"
                android:layout_gravity="start"
                app:tint="@color/black" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:src="@drawable/color2"
                app:shapeAppearanceOverlay="@style/Circle"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo"
                android:textSize="30sp"
                android:fontFamily="@font/gordita_medium"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvimento do App mobile"
                android:textColor="@color/black_tertiary"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="70dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Participantes"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gordita_medium"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Projeto"
                    android:fontFamily="@font/gordita_medium"
                    android:textSize="20dp"
                    android:textColor="@color/gray_primary"/>
            </LinearLayout>
        </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
                <include layout="@layout/card_chat_item_group"/>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>

</FrameLayout>